{
  "name": "mmasiukevich/service-bus-skeleton",
  "description": "PHP Service Bus skeleton",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "mmasiukevich/service-bus": "^v2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "vimeo/psalm": "^2"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "psalm": "./vendor/bin/psalm --config=psalm.xml",
    "phpunit": "phpunit --configuration phpunit.xml --verbose",
    "coverage": "phpunit --configuration phpunit.xml --coverage-html ./coverage --verbose",
    "test": [
      "@phpunit"
    ]
  }
}
